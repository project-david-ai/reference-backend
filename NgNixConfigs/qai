server {
    listen 80;
    listen [::]:80;
    server_name projectdavid.co.uk www.projectdavid.co.uk;
    include /etc/nginx/mime.types;

    # Redirect all HTTP traffic to HTTPS
    return 301 https://$server_name$request_uri;
}

# HTTPS Server Block for q_ai
server {
    listen 443 ssl;
    server_name projectdavid.co.uk www.projectdavid.co.uk;

    # SSL certificate settings
    ssl_certificate /etc/letsencrypt/live/www.projectdavid.co.uk/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/www.projectdavid.co.uk/privkey.pem;

    # Recommended SSL settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # Root location for Qai app
    location / {
        root /home/primethanos/qai/q_ai/FrontEnd/qai/build;
        index index.html;
        try_files $uri $uri/ /index.html;
    }

    # Ensure service worker scripts are not cached
    location ~* \.(?:manifest|service-worker)\.js$ {
        expires -1;
        add_header Cache-Control 'no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0';
    }

    location /bp_auth {
        proxy_pass http://127.0.0.1:5000/bp_auth;
    }

    location /bp_password_reset {
        proxy_pass http://127.0.0.1:5000/bp_password_reset;
    }

    location /bp_identity {
        proxy_pass http://127.0.0.1:5000/bp_identity;
    }

      location /bp_gpt {
        proxy_pass http://127.0.0.1:5000/bp_gpt;
    }

    location /bp_common {
        proxy_pass http://127.0.0.1:5000/bp_common;
    }

    location /bp_legal {
        proxy_pass http://127.0.0.1:5000/bp_legal;
    }

    location /bp_account {
        proxy_pass http://127.0.0.1:5000/bp_account;
    }

    location /google_auth {
        proxy_pass http://127.0.0.1:5000/google_auth;
    }

    location /bp_registration {
        proxy_pass http://127.0.0.1:5000/bp_registration;
    }

    location /bp_preview_registration {
        proxy_pass http://127.0.0.1:5000/bp_preview_registration;
    }

    location /bp_anthropic {
        proxy_pass http://127.0.0.1:5000/bp_anthropic;
    }

    location /bp_files {
        proxy_pass http://127.0.0.1:5000/bp_files;
    }

    location /bp_speech {
        proxy_pass http://127.0.0.1:5000/bp_speech;
    }

    location /bp_user {
        proxy_pass http://127.0.0.1:5000/bp_user;
    }


    location /bp_vector_store {
        proxy_pass http://127.0.0.1:5000/bp_vector_store;
    }

     location /bp_gpt_mobile {
        proxy_pass http://127.0.0.1:5000/bp_gpt_mobile;
    }


    location /bp_mobile_database {
        proxy_pass http://127.0.0.1:5000/bp_mobile_database;
    }


    location /bp_location {
        proxy_pass http://127.0.0.1:5000/bp_location;
    }


    location /login/google {
        proxy_pass http://127.0.0.1:5000/login/google;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    # SSL Stapling
    ssl_stapling on;
    ssl_stapling_verify on;
    resolver 8.8.8.8 8.8.4.4 valid=300s;
    resolver_timeout 5s;

    # Add HSTS header
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
}
