# Default server for Oppenheimer FrontEnd on HTTP
server {
    listen 80;
    listen [::]:80;

    server_name www.projectdavid.ai;

    # SSL certificate settings
    ssl_certificate /etc/letsencrypt/live/www.projectdavid.ai/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/www.projectdavid.ai/privkey.pem;

    include /etc/nginx/mime.types;

    # Redirect all HTTP traffic to HTTPS
    return 301 https://$server_name$request_uri;
}

# HTTPS Server Block for Oppenheimer FrontEnd
server {
    listen 443 ssl;
    server_name www.projectdavid.ai;

    # SSL certificate settings
    # Generate new SSL keys for www.projectdavid.ai using certbot
    # and follow the current pattern for the location to store the keys

    # Recommended SSL settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # Location for the Oppenheimer FrontEnd app
    location / {
        root /home/primethanos/wwwcorporate/oppenheimer/OppenheimerFrontEnd/oppenheimer/build;
        index index.html;
        try_files $uri $uri/ /index.html;
    }

    # SSL Stapling
    ssl_stapling on;
    ssl_stapling_verify on;
    resolver 8.8.8.8 8.8.4.4 valid=300s;
    resolver_timeout 5s;

    # Add HSTS header
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
}